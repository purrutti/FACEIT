<Window x:Class="Appli_CocoriCO2.ComDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Appli_CocoriCO2"
        mc:Ignorable="d"
        Title="Communication Debug" Height="201.639" Width="991.803" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tb1" TextWrapping="Wrap" Text="{}{command:1,condID:0,senderID:4}" Margin="10,0,0,17" Height="115" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="292"/>
        <TextBox x:Name="tb2" TextWrapping="Wrap" Text="" Margin="318,0,10,17" TextChanged="tb2_TextChanged" Height="115" VerticalAlignment="Bottom"/>
        <Label Content="Request sent:" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>
        <Label Content="Response received:" HorizontalAlignment="Left" Margin="318,8,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
